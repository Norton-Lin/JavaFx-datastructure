<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml">
    <top>
        <StackPane>
            <Label text="*欢*迎*使*用*课程管理导航系统-肆贰贰型"/>
        </StackPane>
    </top>
    <center>
        <GridPane alignment="TOP_CENTER" hgap="8" vgap="8" style="-fx-padding:30 0 0 0">
            <Label text="请输入账号密码~" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

            <Label text="账号：" GridPane.columnIndex="0" GridPane.rowIndex="1" labelFor="$usernameField"/>
            <TextField fx:id="usernameField" prefColumnCount="10" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="密码：" GridPane.columnIndex="0" GridPane.rowIndex="2" labelFor="$passwordField"/>
            <PasswordField fx:id="passwordField" prefColumnCount="10" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Button fx:id="submitButton" text="登  录" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label fx:id="buttonStatusText" GridPane.columnIndex="1" GridPane.rowIndex="4"
                   style="-fx-text-fill:#B8860B"/>
        </GridPane>
    </center>
</BorderPane>
