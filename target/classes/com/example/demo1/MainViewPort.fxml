            <Button fx:id="Clock" text="设置闹钟"
                    GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        </GridPane>
    </center>
    <bottom>
        <BorderPane>
            <center>
                <Button fx:id="Manager" text="管*理*员*系*统"/>
            </center>
            <bottom>
                <BorderPane>
                    <center>
                        <Label fx:id="buttonStatusText" styleClass="-fx-font-size:15"  alignment="CENTER"/>
