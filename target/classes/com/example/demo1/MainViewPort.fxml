<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml">
    <top>
        <BorderPane>
            <center>
                <Label text="请选择您要进行的操作~" style="-fx-font-size:18"/>
            </center>
            <bottom>
                <Label text="请注意管理员按钮只有管理员可以按哦" style="-fx-font-size:18"/>
